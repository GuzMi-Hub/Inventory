<h3>Form001</h3>

<input type="text" @bind-value="@inputValue" />
<input type="button" value="Haga clic aqui" @onclick="ChangeText" />
<div>
    @message
</div>

@code{
    [Parameter]
    public string Message { get; set; }

    string message;
    string inputValue;

    protected override async Task OnInitializedAsync()
    {
        message = Message;
    }

    private void ChangeText()
    {
        message = inputValue;
    }
}


